{
    "random_seed": 42,
    "train_data_path": "../data/klue_mrc_add_hint.csv",
    "test_data_path": "../data/test_odqa.csv",
    "output_dir": "../output_odqa_model",
    "model_name": "Qwen/Qwen2.5-7B-Instruct",
    "checkpoint_path": "../output_odqa_model/checkpoint-1407",
    "max_features": 1000,
    "use_lora": true,
    "lora_r": 6,
    "lora_alpha": 8,
    "lora_dropout": 0.05,
    "lora_target_modules": ["q_proj", "k_proj"],
    "lora_bias": "none",
    "lora_task_type": "CAUSAL_LM",

    "sft_config": {
        "do_train": true,
        "do_eval": true,
        "lr_scheduler_type": "cosine",
        "max_seq_length": 1400,
        "output_dir": "../output_odqa_model",
        "per_device_train_batch_size": 1,
        "per_device_eval_batch_size": 1,
        "num_train_epochs": 3,
        "learning_rate": 2e-5,
        "weight_decay": 0.01,
        "logging_steps": 1,
        "logging_strategy": "epoch",
        "save_strategy": "epoch",
        "eval_strategy": "epoch",
        "save_total_limit": 2,
        "save_only_model": true,
        "report_to": "none"
    },

    "prompts": {
        "PROMPT_NO_QUESTION_PLUS_PATH": "../prompts_ver1/prompt_no_question_plus_odqa.txt",
        "PROMPT_QUESTION_PLUS_PATH": "../prompts_ver1/prompt_question_plus_odqa.txt",
        "PROMPT_TEST_NO_QUESTION_PLUS_PATH": "../prompts_ver2/prompt_test_no_question_plus_odqa.txt",
        "PROMPT_TEST_QUESTION_PLUS_PATH": "../prompts_ver2/prompt_test_question_plus_odqa.txt"
    },

    "accelerate_config": {
        "mixed_precision": "fp16",
        "gradient_accumulation_steps": 2,
        "cpu": false,
        "split_batches": true,
        "offload": {
            "cpu_offload": true,
            "disk_offload": false,
            "offload_folder": "./offload_data"
        }
    },

    "quantization_config": {
        "quantization_method": "AWQ",
        "activation_quantization": true,
        "weight_bits": 8,
        "activation_bits": 8,
        "enable_mixed_precision": true,
        "calibration_dataset_size": 1000,
        "calibration_method": "minmax",
        "dynamic_quantization": false
    }
}